<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <!--Resolve spring and jsf different containers-->
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
        <!--<variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>-->
    </application>

    <navigation-rule>
        <from-view-id>/list/PersonList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editPerson</from-outcome>
            <to-view-id>/screen/PersonScreen.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/screen/PersonScreen.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>personList</from-outcome>
            <to-view-id>/list/PersonList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/list/RoleList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editRole</from-outcome>
            <to-view-id>/screen/RoleScreen.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/screen/RoleScreen.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>roleList</from-outcome>
            <to-view-id>/list/RoleList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

</faces-config>