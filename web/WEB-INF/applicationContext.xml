<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="screen, list, utils, converter, menu" />
    <bean id="entityFactory" class="javax.persistence.Persistence" factory-method="createEntityManagerFactory">
        <constructor-arg value="MainPU"/>
    </bean>
    <bean id="entityManager" factory-bean="entityFactory" factory-method="createEntityManager"/>

    <bean id="locale" class="java.util.Locale">
        <constructor-arg index="0" value="ru"/>
        <constructor-arg index="1" value="RU"/>
    </bean>

    <bean id="messages" class="java.util.ResourceBundle" factory-method="getBundle">
        <constructor-arg index="0" value="utils.StringsBundle"/>
        <constructor-arg index="1" ref="locale"/>
    </bean>

